#include <stdio.h>

int main()
{
    int a, b;
    printf("Введіть перше число->");
    scanf("%d", &a);
    printf("Введіть друге число->");
    scanf("%d", &b);
    printf("\nСереднє арифметичне = %f", (a+b)/2.0);
    printf("\nРізниця першого і другого = %d", a-b);
    printf("\nДобуток першого і другого = %d", a*b);
    
    return 0;
}
